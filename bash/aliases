# Node Version Manager 
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh
 
# Bash
alias dotbr="source ~/.bashrc"
alias dotba="v ~/.bash/aliases && dotbr"
alias dotbc="v ~/.bash/config && dotbr"
alias dotbe="v ~/.bash/env && dotbr"
alias dotc=clear

# List files
alias l="ls -Glha"
alias ll=l

# Grep with colour
alias grep="grep --color --line-number"

# History
alias th=bash_top_history

# Postgress
alias postgres_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/log/postgres/postgres.log start"
alias postgres_stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Open
alias o="open"

# Vim
alias v="mvim"
alias vi="mvim"
alias vim="mvim"

# Utility
alias t="take"
function take() { mkdir -p "$@" && cd "$@"; }
alias lol='echo "hahahaha"'
alias f="find"
alias ws='python -m SimpleHTTPServer'

# RVM Create .ruby-version .ruby-gemset
function rc() {
	echo $1 > .ruby-version
	echo $2 > .ruby-gemset
	cd ./
}

# Virtual Box
alias vbx="VBoxManage"

# Time
alias epoch='date +"%s"'

alias subl='/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl'

# Junos
alias junos_on='launchctl load -w /Library/LaunchAgents/net.juniper.pulsetray.plist'
alias junos_off='launchctl unload -w /Library/LaunchAgents/net.juniper.pulsetray.plist'

# Update them all!
alias uall=updateall

# rbenv 
eval "$(rbenv init -)"
export PATH="$HOME/.rbenv/bin:$PATH"

# autojump
[[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh
export PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND ;} history -a"

# ruby/rails dev
alias be="bundle exec"

# openvpnstart
alias openvpnstart=/Applications/Tunnelblick.app/Contents/Resources/openvpnstart

# ccat
alias cat=ccat 
