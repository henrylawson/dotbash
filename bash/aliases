# Node Version Manager 
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh
 
# Bash
alias br="source ~/.bashrc"
alias ba="v ~/.bash/aliases && br"
alias bc="v ~/.bash/config && br"
alias be="v ~/.bash/env && br"
alias c=clear

# List files
alias l="ls -lGha"
alias ll=l

# Grep with colour
alias grep="grep --color --line-number"

# History
alias th=bash_top_history

# Postgress
alias postgres_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/log/postgres/postgres.log start"
alias postgres_stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Open
alias o="open"

# Vim
alias v="vim"

# Utility
alias t="take"
function take() { mkdir -p "$@" && cd "$@"; }
alias lol='echo "hahahaha"'
alias f="find"
alias ws='python -m SimpleHTTPServer'

# RVM Create .ruby-version .ruby-gemset
function rc() {
	echo $1 > .ruby-version
	echo $2 > .ruby-gemset
	cd ./
}

# Virtual Box
alias vbx="VBoxManage"

# Time
alias epoch='date +"%s"'

alias subl='/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl'

# Junos
alias junos_on='launchctl load -w /Library/LaunchAgents/net.juniper.pulsetray.plist'
alias junos_off='launchctl unload -w /Library/LaunchAgents/net.juniper.pulsetray.plist'

# Update them all!
alias uall=updateall

# Oracle SQLPlus
#export ORACLE_HOME=/Applications/SQLPlus/instantclient_11_2
#export DYLD_LIBRARY_PATH=$ORACLE_HOME
#export TNS_ADMIN=$ORACLE_HOME/network/admin
#export PATH=$PATH:$DYLD_LIBRARY_PATH

# rbenv 
eval "$(rbenv init -)"
