# Node Version Manager 
[[ -s /Users/hlawson/.nvm/nvm.sh ]] && . /Users/hlawson/.nvm/nvm.sh
 
# Ruby Version Manager
[[ -s "/Users/hlawson/.rvm/scripts/rvm" ]] && source "/Users/hlawson/.rvm/scripts/rvm"
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" 

# Bash
alias br="source ~/.bashrc"
alias ba="v ~/.bash/aliases && br"
alias bc="v ~/.bash/config && br"
alias be="v ~/.bash/env && br"
alias c=clear

# List files
alias l="ls -lGha"

# History
alias th=bash_top_history

# Postgress
alias postgres_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/log/postgres/postgres.log start"
alias postgres_stop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Open
alias o="open"

# Vim
alias v="vim"

# Utility
alias t="take"
function take() { mkdir -p "$@" && cd "$@"; }
alias lol='echo "hahahaha"'
alias f="find"
alias ws='python -m SimpleHTTPServer'

# TrueCrypt
alias truecrypt='/Applications/TrueCrypt.app/Contents/MacOS/TrueCrypt --text'
alias tc='truecrypt'
function tcm() {
	TC_FILE=~/Volumes/$1.truecrypt
	if [ -f $TC_FILE ];
	then
		tc $TC_FILE /Volumes/$1 && cd /Volumes/$1
	else
		echo "TrueCrypt Volume $TC_FILE does not exist"
	fi
}
function tcd() {
	local PREV=$(pwd)
	cd ~ && tc -d /Volumes/$1 || cd $PREV
}

# Virtual Box
alias vbx="VBoxManage"

# Remove
alias tr="trash"
