#!/bin/bash -e

NO_COLOR='\e[0m'
GREEN='\e[0;32m'

brew="brew update && brew upgrade --all && brew cleanup"
gem="gem update && gem cleanup"
pip="pip install --upgrade pip && pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U"
macosx="softwareupdate -iav"
npm="npm update"
neobundle="~/.vim/bundle/neobundle.vim/bin/neoinstall"

printf "${GREEN}## Update Brew and Brew packages${NO_COLOR}\n"
bash -c "$brew"
printf "\n${GREEN}## Update NPM packages${NO_COLOR}\n"
bash -c "$npm"
printf "\n${GREEN}## Update Ruby gems${NO_COLOR}\n"
bash -c "$gem"
printf "\n${GREEN}## Update PIP packages${NO_COLOR}\n"
bash -c "$pip"
printf "\n${GREEN}## Update MacOSX${NO_COLOR}\n"
sudo bash -c "$macosx"
printf "\n${GREEN}## Update NeoBundle packages${NO_COLOR}\n"
bash -c "$neobundle"
